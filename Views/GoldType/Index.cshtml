@model IEnumerable<GoldType>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Gold Types";
}

<h2>Danh mục loại vàng</h2>

<p><a asp-action="Create" class="btn btn-primary">Thêm mới</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên loại vàng</th>
            <th>Ghi chú</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GoldTypeName</td>
                <td>@item.Remark</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GoldTypeId" class="btn btn-sm btn-warning">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
