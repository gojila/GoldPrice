@model GoldType

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model.GoldTypeId == 0 ? "Thêm loại vàng" : "Sửa loại vàng";
}

<h2>@ViewData["Title"]</h2>

<form action="@(Model.GoldTypeId == 0 ? Url.Action("Create", "GoldType") : Url.Action("Edit", "GoldType"))" method="post">
    @Html.AntiForgeryToken()

    @if (Model.GoldTypeId != 0)
    {
        <input type="hidden" asp-for="GoldTypeId" />
    }

    <div class="mb-3">
        <label class="form-label">Loại vàng</label>
        <input asp-for="GoldTypeName" class="form-control" />
        <span asp-validation-for="GoldTypeName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ghi chú</label>
        <input asp-for="Remark" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a href="@Url.Action("Index","GoldType")" class="btn btn-secondary">Quay lại</a>
</form>
