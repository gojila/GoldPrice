@model Company

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Thêm công ty";
}

<h2>@ViewData["Title"]</h2>

<form action="@(Model?.CompanyId == 0 ? Url.Action("Create", "Company") : Url.Action("Edit", "Company"))" method="post">
    @Html.AntiForgeryToken()
    
    @if (Model.CompanyId != 0)
    {
        <input asp-for="CompanyId" type="hidden" />
    }

    <div class="form-group">
        <label>Tên công ty</label>
        <input asp-for="CompanyName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Điện thoại</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Website</label>
        <input asp-for="Website" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mã số thuế</label>
        <input asp-for="TaxCode" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("Index", "Company")" class="btn btn-secondary">Quay lại</a>
</form>
