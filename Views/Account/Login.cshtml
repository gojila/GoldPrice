@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập quản trị</title>

    <link rel="icon" href="~/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #faf7f2;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Times New Roman", serif;
        }

        .login-card {
            width: 400px;
            padding: 36px;
            background: #fff;
            border-radius: 16px;
            border: 2px solid #c59d5f;
            box-shadow: 0 10px 30px rgba(0,0,0,.15);
            animation: fadeIn .6s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: scale(.96); }
            to { opacity: 1; transform: scale(1); }
        }

        .brand {
            text-align: center;
            font-size: 1.8rem;
            font-weight: 800;
            color: #8b5e34;
            margin-bottom: 8px;
            letter-spacing: 1px;
        }

        .login-title {
            text-align: center;
            font-size: 1.3rem;
            font-weight: 700;
            color: #a87928;
            margin-bottom: 24px;
        }

        .form-label {
            font-size: 1.05rem;
            color: #5a4632;
        }

        .form-control {
            font-size: 1.05rem;
            padding: 10px;
        }

        .btn-login {
            background: #c59d5f;
            border: none;
            font-size: 1.15rem;
            font-weight: 700;
            padding: 10px;
        }

            .btn-login:hover {
                background: #a87928;
            }

        .form-check-label {
            font-size: 1rem;
            color: #5a4632;
        }

        .toast {
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0,0,0,.3);
        }

        .loading-overlay {
            position: fixed;
            inset: 0;
            background: rgba(250, 247, 242, 0.85);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }

        .loading-box {
            background: white;
            padding: 30px 40px;
            border-radius: 14px;
            border: 2px solid #c59d5f;
            box-shadow: 0 10px 30px rgba(0,0,0,.25);
            text-align: center;
            font-size: 1.2rem;
            color: #8b5e34;
        }


    </style>
</head>

<body>

    <form method="post" action="/Account/Login" class="login-card">
        @Html.AntiForgeryToken()

        <div class="brand">
            🪙 BẢNG GIÁ VÀNG
        </div>

        <div class="login-title">
            ĐĂNG NHẬP QUẢN TRỊ
        </div>

        <div class="mb-3">
            <label class="form-label">Tài khoản</label>
            <input name="username"
                   class="form-control"
                   autofocus
                   required />
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input name="password"
                   type="password"
                   class="form-control"
                   required />
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input"
                   type="checkbox"
                   name="rememberMe"
                   value="true" />
            <label class="form-check-label">
                Ghi nhớ đăng nhập
            </label>
        </div>

        <button type="submit"
                class="btn btn-login w-100"
                id="btnLogin">
            <span id="loginText">🔐 Đăng nhập</span>
            <span id="loginSpinner" class="spinner-border spinner-border-sm d-none"></span>
        </button>

    </form>

    <div id="loadingOverlay" class="loading-overlay d-none">
        <div class="loading-box">
            <div class="spinner-border text-warning"></div>
            <div class="mt-3 fw-bold">Đang đăng nhập...</div>
        </div>
    </div>

    <!-- ===== TOAST ERROR ===== -->
    @if (ViewBag.LoginError != null)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-4">
            <div id="loginToast"
                 class="toast align-items-center text-bg-danger border-0 show"
                 role="alert"
                 aria-live="assertive"
                 aria-atomic="true">

                <div class="d-flex">
                    <div class="toast-body fs-5">
                        @ViewBag.LoginError
                    </div>
                    <button type="button"
                            class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>
    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        setTimeout(() => {
            const toastEl = document.getElementById('loginToast');
            if (toastEl) {
                bootstrap.Toast.getOrCreateInstance(toastEl).hide();
            }
        }, 4000);

        const form = document.querySelector('form');
        const btn = document.getElementById('btnLogin');
        const spinner = document.getElementById('loginSpinner');
        const text = document.getElementById('loginText');
        const overlay = document.getElementById('loadingOverlay');

        form.addEventListener('submit', () => {
            btn.disabled = true;
            spinner.classList.remove('d-none');
            text.textContent = 'Đang xử lý...';
            overlay.classList.remove('d-none');
        });
    </script>
</body>
</html>
