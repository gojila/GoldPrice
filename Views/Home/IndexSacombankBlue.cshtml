@{
    Layout = null;
}
@model IEnumerable<GoldPrice>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" http-equiv="refresh" content="30" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>Bảng giá vàng</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link href="~/css/index_sacombank_blue.css" rel="stylesheet" />
    <link href="~/css/uitoogle.css" rel="stylesheet" />
</head>

<body>

    <div class="screen-wrapper">

        <!-- HEADER -->
        <header class="company-header">
            <div class="company-name">@ViewBag.Company.CompanyName.ToString().ToUpper()</div>
            <div class="company-meta">
                📍 @ViewBag.Company.Address.ToString().ToUpper() &nbsp;&nbsp;|&nbsp;&nbsp;
                ☎ @ViewBag.Company.Phone
            </div>
        </header>

        <!-- TITLE -->
        <div class="price-title">
            BẢNG GIÁ VÀNG HÔM NAY
            <span class="unit">(ĐVT: VND/chỉ)</span>
        </div>

        <!-- TABLE -->
        <div class="price-container">
            <table class="gold-table">
                <thead>
                    <tr>
                        <th class="left">LOẠI VÀNG</th>
                        <th class="right">GIÁ MUA</th>
                        <th class="right">GIÁ BÁN</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in Model)
                    {
                        <tr>
                            <td class="left">@g.GoldType?.GoldTypeName</td>
                            <td class="right buy">@g.BuyPrice.ToString("N0")</td>
                            <td class="right sell">@g.SellPrice.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- FOOTER -->
        <footer class="footer">
            &copy; @DateTime.Now.ToString("dd/MM/yyyy") - Bảng Giá Vàng Hôm Nay
            <div>
                @Html.Partial("UIToogle")
            </div>
        </footer>

    </div>

    <script src="~/js/uitoogle.js" asp-append-version="true"></script>
</body>
</html>
