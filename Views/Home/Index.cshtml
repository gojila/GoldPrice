@model IEnumerable<GoldPrice>

<!DOCTYPE html>
<html>
<head>
    @* <meta http-equiv="refresh" content="10"> <!-- tự refresh mỗi 10s --> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        body { background: black; color: yellow; font-size: 2rem; text-align: center; }
        table { width: 90%; margin: auto; }
        th, td { padding: 10px; border-bottom: 1px solid yellow; }
    </style>
</head>
<body>
    <h1>@ViewBag.Company.CompanyName</h1>
    <h1>@ViewBag.Company.Address</h1>
    <h1>BẢNG GIÁ VÀNG HÔM NAY NGÀY @DateTime.Now.ToString("dd/MM/yyyy")</h1>
    <table>
        <thead>
            <tr>
                <th>Loại vàng</th>
                <th>Ngày Cập Nhật</th>
                <th>Giá mua vào</th>
                <th>Giá bán ra</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GoldType?.GoldTypeName</td>
                    <td>@item.ApplyDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.BuyPrice.ToString("N0") (VND)</td>
                    <td>@item.SellPrice.ToString("N0") (VND)</td>
                    
                </tr>
            }
        </tbody>
    </table>
</body>
</html>